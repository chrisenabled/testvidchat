<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment android:id="@+id/video_pager_fragment"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_gravity="start"
              android:name="com.f80prototype.verizon.protoandroid.fragments.VideoPagerFragment"
              tools:layout="@layout/fragment_video"/>

    <fragment android:id="@+id/conversation_fragment"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_gravity="start"
              android:name="com.f80prototype.verizon.protoandroid.fragments.ConversationFragment"
              tools:layout="@layout/fragment_conversation"/>



</LinearLayout>
