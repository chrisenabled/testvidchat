<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        xmlns:conversation="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conversation"
        conversation:cardCornerRadius = "6dp"
        android:clickable="true"
        conversation:cardBackgroundColor="#f0f0f0"
        >

        <RelativeLayout
            android:id="@+id/conversation_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/moment_img"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/grp_msg"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>